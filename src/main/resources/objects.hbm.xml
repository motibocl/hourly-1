    <class name="com.elector.Objects.Entities.WorktimeObject" table="workTimes" lazy="false">
        <id name="timeId" type="int"  column="timeId" >
            <generator class="native"/>
        </id>
        <property name="enterTime" type="float" column="enterTime"/>
        <property name="exitTime" type="float" column="exitTime"/>
        <property name="date" type="java.sql.Date" column="date" />
        <property name="totalHoursWorked" type="float" column="totalHoursWorked"/>
        <property name="dayOfTheWeek" type="string" column="dayOfTheWeek"/>
        <property name="comment" type="string" column="comment"/>
        <many-to-one name="EmployeeObject" column="id" class="com.elector.Objects.Entities.EmployeeObject"/>
    </class>


    <class name="com.elector.Objects.Entities.ReasonObject" table="reasons" lazy="false">
        <id name="reasonId" type="int"  column="reasonId" >
            <generator class="native"/>
        </id>
        <property name="enterTime" type="float" column="enterTime"/>
        <property name="exitTime" type="float" column="exitTime"/>
        <property name="howManyHours" type="int" column="howManyHours" />
        <property name="reasonText" type="string" column="reasonText"/>
        <property name="date" type="java.sql.Date" column="date"/>
        <many-to-one name="EmployeeObject" column="id" class="com.elector.Objects.Entities.EmployeeObject"/>
    </class>

    <class name="com.elector.Objects.Entities.AdminObject" table="Admins" lazy="false">
        <id name="id" type="int"  column="id" >
        </id>
        <property name="email" type="string" column="email"/>
        <property name="name" type="string" column="name"/>
        <property name="phone" type="string" column="phone" />
        <property name="password" type="string" column="password"/>
        <many-to-one name="companyObject" column="companyId" class="com.elector.Objects.Entities.CompanyObject"/>
    </class>


    <class name="com.elector.Objects.Entities.EmployeeObject" table="employees" lazy="false">
        <id name="id" type="int" column="id">
        </id>
        <property name="name" type="string" column="name"/>
        <property name="phone" type="string" column="phone"/>
        <property name="password" type="string" column="password"/>
        <property name="enterOrExit" type="boolean" column="enterOrExit" not-null="true"/>
        <many-to-one name="companyObject" column="companyId" class="com.elector.Objects.Entities.CompanyObject"/>
    </class>

    <class name="com.elector.Objects.Entities.CompanyObject" table="companies" lazy="false">
        <id name="id" type="int" column="companyId">
        </id>
        <property name="name" type="string" column="companyName"/>
        <property name="address" type="string" column="companyAdress"/>
    </class>


</hibernate-mapping>
