<script type="text/javascript">

    google.charts.load('current', {packages: ['corechart', 'bar']});
    google.charts.setOnLoadCallback(init);
    function eachMonthActivity(January,February,March,April,May,June,July,August,September,October,November,December) {
        var dataMonths = google.visualization.arrayToDataTable([
            ['string', 'Hours', { role: 'style' }],
            ['January', parseFloat(January), '#21afd3'],            // RGB value
            ['February', parseFloat(February), '#21afd3'],            // English color name
            ['March', parseFloat(March), '#21afd3'],
            ['April', parseFloat(April), '#21afd3'],
            ['May',parseFloat(May), '#21afd3' ], // CSS-style declaration
            ['June', parseFloat(June), '#21afd3'],            // RGB value
            ['July', parseFloat(July), '#21afd3'],            // English color name
            ['August', parseFloat(August), '#21afd3'],
            ['September', parseFloat(September), '#21afd3' ],
            ['October', parseFloat(October), '#21afd3'],            // English color name
            ['November', parseFloat(November), '#21afd3'],
            ['December',parseFloat(December), '#21afd3' ]
        ]);

        var optionsM = {
            title: 'Motivation Level Throughout the Months',
            colors:['#21afd3'],
            hAxis: {
                format: 'h:mm a',
                viewWindow: {
                    min: [7, 30, 0],
                    max: [17, 30, 0]
                }

            },
            vAxis: {
                title: 'Hours in month'
            },
            backgroundColor: 'transparent',
            chartArea: {
                backgroundColor: 'transparent',
            },
            showRowNumber: true, width: '100%', height: '100%'
        };

        var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));

        chart.draw(dataMonths, optionsM);
        window.addEventListener('resize', function () {
            chart.draw(dataMonths, optionsM);
        });

    }

    function eachDaysActivity(Sunday,Monday,Tuesday,Wednesday,Thursday,Friday) {
        var data = google.visualization.arrayToDataTable([
            ['string', 'Hours', { role: 'style' }],
            ['Sunday', parseFloat(Sunday), '#21afd3'],            // RGB value
            ['Monday', parseFloat(Monday), '#21afd3'],            // English color name
            ['Tuesday', parseFloat(Tuesday), '#21afd3'],
            ['Wednesday', parseFloat(Wednesday), '#21afd3'],
            ['Thursday',parseFloat(Thursday), '#21afd3' ], // CSS-style declaration
            ['Friday', parseFloat(Friday), '#21afd3'],            // RGB value
        ]);

        var options = {
            title: 'Motivation Level Throughout the Day',
            colors:['#21afd3'],
            hAxis: {
               // title: 'Days',
                format: 'h:mm a',
                viewWindow: {
                    min: [7, 30, 0],
                    max: [17, 30, 0]
                }
            },
            vAxis: {
                title: 'Hours in day'
            },
            backgroundColor: 'transparent',
            chartArea: {
                backgroundColor: 'transparent',
            }
        };

        var chartDays = new google.visualization.ColumnChart(document.getElementById('chart_days'));

        chartDays.draw(data, options);
        window.addEventListener('resize', function () {
            chartDays.draw(data, options);
        });

    }
    function init(January,February,March,April,May,June,July,August,September,October,November,December,Sunday,Monday,Tuesday,Wednesday,Thursday,Friday) {
        eachMonthActivity(January,February,March,April,May,June,July,August,September,October,November,December);
        eachDaysActivity(Sunday,Monday,Tuesday,Wednesday,Thursday,Friday)
    }


</script>

