<script>

    var wb = XLSX.utils.table_to_book(document.getElementById('please'), {sheet:"Sheet JS"});
    var wbout = XLSX.write(wb, {bookType:'xlsx',  type: 'binary'});


    function s2ab(s) {
        var buf = new ArrayBuffer(s.length);
        var view = new Uint8Array(buf);
        for (var i=0; i<s.length; i++) view[i] = s.charCodeAt(i) & 0xFF;
        return buf;
    }
    function excelDownload(){
        saveAs(new Blob([s2ab(wbout)],{type:"application/octet-stream"}),'$employeeName'+'.xlsx');
    }
</script>

